{
  "name": "jspm-hmr",
  "version": "0.4.0",
  "preferGlobal": true,
  "description": "JSPM (SystemJS) Hot-Module-Reload - made for dummies!",
  "main": "dist/jspm-hmr-server.js",
  "bin": "dist/cli.js",
  "files": [
    "boilerplate/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "ts-node -P lib lib/cli.ts -I",
    "clean": "rimraf node_modules",
    "build": "rimraf dist && tsc -p lib",
    "lint": "tslint lib/**/*.ts",
    "test": "echo \"Yet no tests was needed.\"",
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm test",
    "prepublish": "npm run test && npm run build",
    "postinstall": "typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrwitek/jspm-hmr.git"
  },
  "keywords": [
    "systemjs",
    "jspm",
    "http",
    "server",
    "hot",
    "reload",
    "reloader",
    "loader",
    "module",
    "replacement",
    "hmr",
    "development",
    "react",
    "dummies"
  ],
  "author": "Piotr Witek <piotrek.witek@gmail.com> (http://piotrwitek.github.io)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/piotrwitek/jspm-hmr/issues"
  },
  "homepage": "https://github.com/piotrwitek/jspm-hmr",
  "dependencies": {
    "chokidar-socket-emitter": "^0.5.2",
    "commander": "^2.9.0",
    "http-server": "^0.9.0",
    "systemjs-hot-reloader": "^0.5.8"
  },
  "devDependencies": {
    "husky": "^0.11.4",
    "rimraf": "^2.5.3",
    "ts-node": "^0.9.3",
    "tslint": "^3.13.0",
    "typings": "^1.3.1"
  }
}
